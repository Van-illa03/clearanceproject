<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.registration">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="E-Clearance"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Registration">
        <activity
            android:name="cvsu.clearance.app.StaffScreen"
            android:exported="true" />
        <activity
            android:name="cvsu.clearance.app.FrontScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cvsu.clearance.app.LoginScreen"
            android:exported="true" />
        <activity
            android:name="cvsu.clearance.app.RegisterScreen"
            android:exported="true" />
        <activity
            android:name="cvsu.clearance.app.MainActivity"
            android:exported="true"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>