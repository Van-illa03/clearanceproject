<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Input your account password:"
            android:id="@+id/clearancereset_passwordlabel"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17dp">
        </TextView>

        <EditText
            android:id="@+id/clearancereset_passwordtext"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:layout_below="@id/clearancereset_passwordlabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#000000"
            android:inputType="textPassword">

        </EditText>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Proceed"
            android:backgroundTint="#761212"
            android:id="@+id/clearancereset_proceedbtn"
            android:layout_below="@id/clearancereset_passwordtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white">

        </Button>

    </RelativeLayout>





</RelativeLayout>