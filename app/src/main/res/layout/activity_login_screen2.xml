<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/formbg1"
    android:orientation="vertical"
    tools:context="cvsu.clearance.app.LoginScreen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/logincontainer"
        >
        <TextView
            android:id="@+id/LoginAsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Account Login"
            android:textColor="#000000"
            android:textSize="28dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/UserEmail"
            android:layout_width="346dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:layout_below="@id/LoginAsLabel"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/UserPassword"
            android:layout_width="346dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/UserEmail"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="242dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:textColor="@color/white"
            android:backgroundTint="#26580F"
            android:layout_below="@id/UserPassword"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:id="@+id/signupcontainer"
        android:layout_marginTop="140dp"
        >
        <TextView
            android:id="@+id/notAMemberYet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Don't have an account? Follow the instructions below"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_alternates"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/spinnercontainer"
        >
    <Spinner
        android:id="@+id/RoleDropdown"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:entries="@array/roles"
        android:textAlignment="center"
        android:layout_centerHorizontal="false"
        android:layout_toRightOf="@id/usertypelabel"
        android:layout_marginLeft="0dp"
        />

        <TextView
            android:id="@+id/usertypelabel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="I want to register as a"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginLeft="39dp"
            android:paddingTop="10dp"
            >
        </TextView>
    </RelativeLayout>

    <EditText
        android:id="@+id/StaffCode"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="17dp"
        android:hint="Staff code"
        android:inputType="text"
        android:minHeight="40dp"
        android:textColor="@color/white"
        android:textColorHint="@color/browser_actions_bg_grey"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinnercontainer"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/AdminCode"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="17dp"
        android:hint="Admin code"
        android:inputType="text"
        android:minHeight="40dp"
        android:textColor="@color/white"
        android:textColorHint="@color/browser_actions_bg_grey"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinnercontainer"
        android:backgroundTint="@color/white"
        />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="214dp"
            android:layout_height="17dp"
            android:progressTint="#4CAF50"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/AdminCode"
            />
        <Button
            android:id="@+id/signupProceedButton"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:text="Proceed to Sign Up"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>