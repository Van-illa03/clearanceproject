<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Input your email:"
            android:id="@+id/forgotpass_emaillabel"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </TextView>

        <EditText
            android:id="@+id/forgotpass_emailtext"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="CvSU Email"
            android:layout_below="@id/forgotpass_emaillabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#000000"
            android:inputType="textEmailAddress">

        </EditText>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Proceed"
            android:backgroundTint="#26580F"
            android:id="@+id/forgotpass_proceedbtn"
            android:layout_below="@id/forgotpass_emailtext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

        </Button>

    </RelativeLayout>





</RelativeLayout>