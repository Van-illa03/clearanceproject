<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/formbg2"
    tools:context="cvsu.clearance.app.StudentMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:padding="10dp"
        android:background="#26580F"
        >

        <ImageView
            android:id="@+id/ProfileIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile_icon"/>

        <TextView
            android:id="@+id/WelcomeStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/ProfileIcon"
            android:layout_centerVertical="false"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="9dp"
            android:textSize="19dp"
            android:text="Hello Student!"/>

        <TextView
            android:id="@+id/DisplayEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/ProfileIcon"
            android:layout_below="@id/WelcomeStudent"
            android:layout_marginLeft="9dp"
            android:textSize="14dp"
            android:text="Email"
            />
        <TextView
            android:id="@+id/DisplayStdNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/ProfileIcon"
            android:layout_below="@id/DisplayEmail"
            android:layout_marginLeft="9dp"
            android:textSize="14dp"
            android:text="Std No"
            />
        <TextView
            android:id="@+id/DisplayCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/ProfileIcon"
            android:layout_below="@id/DisplayStdNo"
            android:layout_marginLeft="9dp"
            android:textSize="14dp"
            android:text="Course"
            />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Logout"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:background="@color/browser_actions_divider_color"
        >
        <TextView
            android:id="@+id/STPIncompleteReqLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Pending Requirements"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/STPStationNameLabel"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Signing Station:"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_below="@id/STPIncompleteReqLabel"

            />

        <Spinner
            android:id="@+id/STPStationNameSpinner"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/STPStationNameLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#26580F"
            android:textColor="#26580F"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/STPStationLocationLabel"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Location:"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_below="@id/STPStationNameSpinner"
            />

        <TextView
            android:id="@+id/STPStationLocationText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/STPStationLocationLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="-"
            android:textColor="#26580F"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/STPRequirementsLabel"
            android:layout_width="290dp"
            android:layout_height="27dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="Requirements:"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/STPStationLocationText"
            />

        <Spinner
            android:id="@+id/STPRequirementsSpinner"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:backgroundTint="#26580F"
            android:layout_below="@id/STPRequirementsLabel"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/STPReqDescriptionLabel"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/STPRequirementsSpinner"
            android:text="Requirements Description: "
            android:textSize="17dp"
            android:textColor="@color/black"
            ></TextView>

        <TextView
            android:id="@+id/STPReqDescriptionText"
            android:layout_width="290dp"
            android:layout_height="58dp"
            android:layout_below="@id/STPReqDescriptionLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="-"
            android:textColor="#26580F"
            android:textSize="17dp"
            android:layout_marginBottom="5dp"></TextView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="407dp"
            android:layout_height="14dp"
            android:layout_marginStart="181dp"
            android:layout_marginEnd="182dp"
            android:progressTint="#8BC34A"
            android:layout_below="@id/STPReqDescriptionText"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</LinearLayout>