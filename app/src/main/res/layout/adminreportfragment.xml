<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/formbg2"
    tools:context="cvsu.clearance.app.AdminMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:background="@color/browser_actions_divider_color"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/SyncBtnAdmin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#26580F"
            android:text="Sync Completed Clearance Data"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:layout_height="50dp" />

    <Button
        android:id="@+id/generateReportBtnAdmin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#26580F"
        android:text="Generate CSV &amp; Download"
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:layout_height="50dp"
        android:layout_below="@id/SyncBtnAdmin"/>


        <Button
            android:id="@+id/viewDataBtnAdmin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#26580F"
            android:layout_below="@+id/generateReportBtnAdmin"
            android:text="View Data"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:layout_height="50dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:rowCount="6"
            android:columnCount="2"
            android:layout_below="@+id/viewDataBtnAdmin"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ReportListAdmin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </GridLayout>
    </RelativeLayout>
</ScrollView>