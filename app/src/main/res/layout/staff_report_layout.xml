<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:id="@+id/StaffReportLayout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_margin="3dp"
        android:backgroundTint="@color/browser_actions_bg_grey">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Student Name:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_NameLabel"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_NameText"
                android:layout_toRightOf="@id/reportlayout_NameLabel"></TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Student Number:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_StdNoLabel"
                android:layout_below="@id/reportlayout_NameText"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_StdNoText"
                android:layout_toRightOf="@id/reportlayout_StdNoLabel"
                android:layout_below="@id/reportlayout_NameText">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Course:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_CourseLabel"
                android:layout_below="@id/reportlayout_StdNoText"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_CourseText"
                android:layout_toRightOf="@id/reportlayout_CourseLabel"
                android:layout_below="@id/reportlayout_StdNoText">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Requirement:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_ReqLabel"
                android:layout_below="@id/reportlayout_CourseText"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_ReqText"
                android:layout_toRightOf="@id/reportlayout_ReqLabel"
                android:layout_below="@id/reportlayout_CourseText">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Status:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_StatusLabel"
                android:layout_below="@id/reportlayout_ReqText"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_StatusText"
                android:layout_toRightOf="@id/reportlayout_StatusLabel"
                android:layout_below="@id/reportlayout_ReqText">
            </TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:textSize="13dp"
                android:text="Date:"
                android:textColor="@color/black"
                android:id="@+id/reportlayout_DateLabel"
                android:layout_below="@id/reportlayout_StatusText"
                android:layout_marginBottom="5dp">
            </TextView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="-"
                android:textColor="#26580F"
                android:id="@+id/reportlayout_DateText"
                android:layout_toRightOf="@id/reportlayout_DateLabel"
                android:layout_below="@id/reportlayout_StatusText">
            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>