<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/formbg2"
    tools:context="cvsu.clearance.app.StaffMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/ScanQRLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Scan QR Code"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/DisplayStdUID"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/ScanQRLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/scanBtn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/DisplayStdUID"
            android:backgroundTint="#26580F"
            android:text="Scan QR"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:layout_height="50dp"
            android:layout_below="@id/ScanQRLabel"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/browser_actions_divider_color"
        android:paddingBottom="30dp"
        >

        <TextView
            android:id="@+id/StudentNameLabel"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Student Name:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/StudentNameText"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@id/StudentNameLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/StudentCourseLabel"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:layout_below="@id/StudentNameText"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Course:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/StudentCourseText"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/StudentCourseLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:inputType="none"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/PendingRequirementsLabel"
            android:layout_width="250dp"
            android:layout_height="17dp"
            android:layout_below="@id/StudentCourseText"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Pending Requirements: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/PendingRequirementsSpinner"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_below="@id/PendingRequirementsLabel"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:backgroundTint="@color/black"
            />

        <TextView
            android:id="@+id/PendingReqDescriptionLabel"
            android:layout_width="290dp"
            android:layout_height="30dp"
            android:layout_below="@id/PendingRequirementsSpinner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Requirements Description: "
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/PendingReqDescriptionText"
            android:layout_width="290dp"
            android:layout_height="58dp"
            android:layout_below="@id/PendingReqDescriptionLabel"
            android:layout_marginTop="2dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"></TextView>

        <Button
            android:id="@+id/SignButton"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_below="@id/PendingReqDescriptionText"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#26580F"
            android:text="Sign"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/UpdateButton"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@id/PendingReqDescriptionText"
            android:layout_marginTop="20dp"

            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/SignButton"
            android:backgroundTint="#26580F"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="14dp"
            android:layout_below="@id/UpdateButton"
            android:layout_marginStart="181dp"
            android:layout_marginEnd="182dp"
            android:progressTint="#8BC34A"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</LinearLayout>